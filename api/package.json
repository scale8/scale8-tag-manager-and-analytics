{
    "name": "s8-api",
    "version": "1.0.0",
    "description": "The api behind Scale 8 services",
    "license": "AGPL-3.0",
    "engines": {
        "node": "14"
    },
    "scripts": {
        "clean": "rimraf coverage dist tmp logs test_emails",
        "lint": "eslint . --ext .ts",
        "lint:fix": "yarn lint --fix",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "platforms:build": "yarn --cwd ../platforms build && rsync -a --delete ../platforms/builds/ platform-builds",
        "start:prod:docker": "NODE_ENV=production node src/Main.js",
        "start:prod:commerical": "NODE_ENV=production SERVER_MODE=COMMERCIAL node src/Main.js",
        "dev:debug": "yarn platforms:build && TZ=UTC NODE_ENV=development TS_NODE_FILES=true node-dev --respawn --inspect=9229 -r ts-node/register ./src/Main.ts",
        "dev:db:connect": "mongo --username=s8-admin --password=s8-admin --host=127.0.0.1 --port=27017",
        "dev:job": "TZ=UTC NODE_ENV=development TS_NODE_FILES=true node -r ts-node/register ./src/JobManager.ts",
        "dev:job:commercial": "TZ=UTC NODE_ENV=development SERVER_MODE=COMMERCIAL TS_NODE_FILES=true node -r ts-node/register ./src/JobManager.ts",
        "dev": "yarn platforms:build && yarn dev:job --run-job=SetupChecks && TZ=UTC NODE_ENV=development TS_NODE_FILES=true node-dev --respawn -r ts-node/register ./src/Main.ts",
        "dev:commercial": "yarn platforms:build && yarn dev:job:commercial --run-job=SetupChecks && TZ=UTC NODE_ENV=development SERVER_MODE=COMMERCIAL TS_NODE_FILES=true node-dev --respawn -r ts-node/register ./src/Main.ts",
        "dev:commercial:stripe": "stripe listen --forward-to https://api-dev.scale8.com:8443/stripe/webhook/v1"
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.92",
        "@types/body-parser": "^1.19.1",
        "@types/express": "^4.17.13",
        "@types/got": "^9.6.12",
        "@types/graphql-type-json": "^0.3.2",
        "@types/jest": "^27.0.2",
        "@types/node": "^16.11.7",
        "@types/nodemailer": "^6.4.4",
        "@types/rimraf": "^3.0.2",
        "@typescript-eslint/eslint-plugin": "^5.3.1",
        "@typescript-eslint/parser": "^5.3.1",
        "eslint": "^8.2.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-jest": "^25.2.4",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "jest": "^27.3.1",
        "mockdate": "^3.0.5",
        "node-dev": "^7.1.0",
        "prettier": "^2.4.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^27.0.7",
        "ts-node": "^10.4.0",
        "typescript": "^4.4.4"
    },
    "dependencies": {
        "@airbrake/node": "^2.1.7",
        "@google-cloud/bigquery": "^5.9.1",
        "@google-cloud/storage": "^5.16.0",
        "apollo-server-express": "^3.5.0",
        "aws-sdk": "^2.1028.0",
        "body-parser": "^1.19.0",
        "colors": "^1.4.0",
        "colorts": "^0.1.63",
        "date-fns": "^2.25.0",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "got": "^11.8.2",
        "graphql": "^15.7.2",
        "graphql-request": "^3.6.1",
        "graphql-type-json": "^0.3.2",
        "inversify": "^6.0.1",
        "inversify-inject-decorators": "^3.1.0",
        "moment-timezone": "^0.5.34",
        "mongodb": "^4.1.4",
        "node-fetch": "^3.1.0",
        "node-notifier": "^10.0.0",
        "nodemailer": "^6.7.0",
        "otplib": "^12.0.1",
        "reflect-metadata": "^0.1.13",
        "ssl-validator": "^1.0.7",
        "stripe": "^8.207.0",
        "twing": "^5.1.0"
    }
}
