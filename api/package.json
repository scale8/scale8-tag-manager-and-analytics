{
    "name": "s8-api",
    "version": "1.0.0",
    "description": "The api behind Scale 8 services",
    "license": "AGPL-3.0",
    "engines": {
        "node": "12.16"
    },
    "scripts": {
        "clean": "rimraf coverage dist tmp logs test_emails",
        "lint": "eslint . --ext .ts",
        "lint:fix": "yarn lint --fix",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "platforms:build": "yarn --cwd ../platforms build && rsync -a --delete ../platforms/builds/ platform-builds",
        "start:prod:docker": "NODE_ENV=production node src/Main.js",
        "dev": "yarn platforms:build && TZ=UTC NODE_ENV=development TS_NODE_FILES=true node-dev --respawn -r ts-node/register ./src/Main.ts",
        "dev:debug": "yarn platforms:build && TZ=UTC NODE_ENV=development TS_NODE_FILES=true node-dev --respawn --inspect=9229 -r ts-node/register ./src/Main.ts",
        "dev:db:connect": "mongo --username=s8-admin --password=s8-admin --host=127.0.0.1 --port=27017",
        "dev:update-usages": "TZ=UTC NODE_ENV=development TS_NODE_FILES=true node -r ts-node/register ./src/UpdateUsage.ts"
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.0",
        "@types/express": "^4.17.7",
        "@types/got": "^9.6.10",
        "@types/graphql": "^14.5.0",
        "@types/graphql-type-json": "^0.3.2",
        "@types/jest": "^25.2.1",
        "@types/mongodb": "^3.5.27",
        "@types/node": "^13.11.1",
        "@types/node-fetch": "^2.5.7",
        "@types/nodemailer": "^6.4.0",
        "@types/rimraf": "^3.0.0",
        "@typescript-eslint/eslint-plugin": "^4.28.4",
        "@typescript-eslint/parser": "^4.28.4",
        "eslint": "^7.31.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-jest": "^24.4.0",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-unused-imports": "^1.1.2",
        "jest": "^27.0.6",
        "mockdate": "^2.0.5",
        "node-dev": "^4.0.0",
        "prettier": "^2.3.2",
        "rimraf": "^3.0.2",
        "ts-jest": "^27.0.4",
        "typescript": "^4.0.2"
    },
    "dependencies": {
        "@airbrake/node": "^2.1.3",
        "@google-cloud/bigquery": "^5.3.0",
        "@google-cloud/storage": "^5.3.0",
        "apollo-server-express": "^2.15.1",
        "aws-sdk": "2.738.0",
        "body-parser": "^1.19.0",
        "browserslist": "^4.16.5",
        "colors": "^1.4.0",
        "colorts": "^0.1.63",
        "date-fns": "^2.21.2",
        "dotenv": "^9.0.2",
        "express": "^4.17.1",
        "got": "^11.5.1",
        "graphql": "^14.7.0",
        "graphql-request": "^2.1.0-next.1",
        "graphql-type-json": "^0.3.1",
        "inversify": "^5.0.1",
        "inversify-inject-decorators": "^3.1.0",
        "locutus": "^2.0.15",
        "maxmind": "^4.1.3",
        "merge": "^2.1.1",
        "moment-timezone": "^0.5.31",
        "mongodb": "^3.6.2",
        "node-fetch": "^2.6.1",
        "node-notifier": "^8.0.1",
        "nodemailer": "^6.4.8",
        "normalize-url": "^4.5.1",
        "object-path": "^0.11.6",
        "otplib": "^12.0.1",
        "path-parse": "^1.0.7",
        "reflect-metadata": "^0.1.13",
        "ssl-validator": "^1.0.7",
        "stripe": "^8.148.0",
        "ts-node": "^8.8.2",
        "tslib": "^1.11.1",
        "twing": "^5.0.1",
        "ws": "^6.2.2"
    }
}
